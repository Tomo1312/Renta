<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".Fragment.FeedFragment">


    <LinearLayout
        android:id="@+id/layout_user_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMenu"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="visible"
        android:weightSum="4"
        tools:context=".Fragment.FeedFragment">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="dasdfas"
                android:textColor="@android:color/white"
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <customSlider.Slider
                android:id="@+id/house_image_slide"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_house_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto"
                android:text="sadsdaf"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_map_24"
                    android:id="@+id/img_show_map"/>
            <TextView
                android:id="@+id/txt_house_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:padding="8dp"
                android:text="Ulica Ljudevita Gaja 4, Zaprešić"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_owner_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:padding="8dp"
                android:text="Ulica Ljudevita Gaja 4, Zaprešić"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_house_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto"
                android:gravity="right"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:text="50kn/noc"
                android:textColor="@android:color/black"
                android:textSize="22dp" />
            <LinearLayout

                android:id="@+id/layout_start_date_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:padding="8dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="start_date" />

                <ImageView
                    android:id="@+id/start_date_pick"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_calendar_today_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_start_end_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:gravity="center"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="end_date" />

                <ImageView
                    android:id="@+id/start_end_pick"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_calendar_today_24" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_reservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:text="@string/reservation"
                android:textAllCaps="true"
                android:layout_marginBottom="40dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>